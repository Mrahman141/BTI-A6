<div class="row">
    <div class="col-md-12">
        <h2>{{data.firstName}} {{data.lastName}} - Employee: {{data.employeeNum}}</h2>
        <hr />
        <form method="post" action="/employee/update">
        <input type="hidden" name="employeeNum" value={{data.employeeNum}}>
            <fieldset>
                <legend>Personal Information</legend>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="firstName">First Name:</label>
                            <input class="form-control" id="firstName" name="firstName" type="text" value="{{ data.firstName}}" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="lastName">Last Name:</label>
                            <input class="form-control" id="lastName" name="lastName" type="text" value="{{ data.lastName}}" />
                        </div>
                    </div>
                </div>
                <div class = "row">
                    <div class="col-md-6">
                        <div class="form-group">
                           <label for="email"> Email: </label>
                           <input class="form-control" id="email" name="email"
                                    type = "email" value = {{data.email}}>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label for ="SSN"> Social Security Number: </label>
                            <input class="form-control" id="SSN" name="SSN"
                                    type="text" value = {{data.SSN}} readonly>
                        </div>
                    </div>
                </div>
                <div class = "row">
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="addressStreet"> Adress (Street): </label>
                            <input class="form-control" id="addressStreet" name="addressStreet"
                                    type="text" value="{{data.addressStreet}}">
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="addressCity"> Adress (City): </label>
                                <input class="form-control" id="addressCity" name="addressCity" 
                                type="text" value="{{data.addressCity}}" />
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="addressState"> Adress (State): </label>
                            <input class="form-control" id="addressState" name="addressState"
                                    type="text" value={{data.addressState}}>
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="addressPostal"> Adress (Zip Code): </label>
                            <input class="form-control" id="addressPostal" name="addressPostal"
                                    type="text" value={{data.addressPostal}}>
                        </div>
                    </div>
                </div>
            </fieldset>
            <fieldset>
                <legend> Company Information </legend>
                <div class="row">
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="isManager"> Manager: </label>
                            {{#if data.isManager}}
                                <input class="form-control" id="isManager" name="isManager"
                                        type="checkbox" >
                            {{else}}
                                <input class="form-control" id="isManager" name="isManager"
                                        type="checkbox" checked >
                            {{/if}}
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="employeeManagerNum"> Employee's Manager Number: </label>
                            <input class="for-control" id="employeeManagerNum" name="employeeManagerNum"
                                    type="text" value = {{data.employeeManagerNum}}>
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="form-group">
                            <label>Status:</label><br>
                            <input class="checkbox-inline" id="fullTime" name="status"
                                    type="radio" value = "Full Time" {{#equal data.status "Full Time" }} checked {{/equal}}>
                            <label for="fullTime"> Full Time </label> &nbsp;
                            <input class="checkbox-inline" id="partTime" name="status"
                                    type="radio" value = "Part Time" {{#equal data.status "Part Time" }} checked {{/equal}}>
                            <label for="partTime"> Part Time </label>
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="department"> Department: </label>
                            <select class="form-control" name="department" id="department">
                                <option value="1" {{#equal data.department "1" }} selected {{/equal}}> Creative Services </option>
                                <option value="2" {{#equal data.department "2" }} selected {{/equal}}> Product Development </option>
                                <option value="3" {{#equal data.department "3" }} selected {{/equal}}> Marketing </option>
                                <option value="4" {{#equal data.department "4" }} selected {{/equal}}> Strategic Planning </option>
                                <option value="5" {{#equal data.department "5" }} selected {{/equal}}> Accounting </option>
                                <option value="6" {{#equal data.department "6" }} selected {{/equal}}> Human resources </option>
                                <option value="7" {{#equal data.department "7" }} selected {{/equal}}> Quality Analysis </option>
                            </select>
                        </div>
                    </div>

                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label> Hire Date: </label>
                            <input class="form-control" id="hireDate" name="hireDate" type="text" 
                                    value = {{data.hireDate}} readonly>
                        </div>
                    </div>
                </div>

                </div>
            </fieldset>
            <hr />
            <input type="submit" class="btn btn-primary pull-right" value="Update Employee" /><br /><br /><br />
        </form>
    </div>
</div>